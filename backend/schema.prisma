datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Merch {
  id          String  @id @default(cuid())
  name        String  @default("")
  productUrl  String  @default("")
  description String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  photo       String?
}

model Faq {
  id       String @id @default(cuid())
  question String @default("")
  answer   String @default("")
}

model Event {
  id                     String    @id @default(cuid())
  namaKegiatan           String    @default("")
  thumbnail              String?
  waktuAwalAcara         DateTime?
  waktuAkhirAcara        DateTime?
  tags                   Tag[]     @relation("Event_tags")
  jenisKegiatan          String?
  shortDescription       String    @default("")
  longDescription        String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  isHighlighted          Boolean   @default(false)
  from_Program_timelines Program[] @relation("Program_timelines")
}

model Tag {
  id     String  @id @default(cuid())
  name   String  @default("")
  events Event[] @relation("Event_tags")
}

model Program {
  id               String    @id @default(cuid())
  namaProgram      String    @default("")
  deskripsiProgram String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  thumbnail        String?
  articles         Article[] @relation("Program_articles")
  timelines        Event[]   @relation("Program_timelines")
}

model Article {
  id                    String    @id @default(cuid())
  title                 String    @default("")
  content               String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  thumbnail             String?
  author                String    @default("")
  authorPhoto           String?
  publishedAt           DateTime?
  minutesToRead         Int?
  from_Program_articles Program[] @relation("Program_articles")
}

model photoDokumentasi {
  id      String  @id @default(cuid())
  photo   String?
  caption String  @default("")
}

model sponsor {
  id   String  @id @default(cuid())
  name String  @default("")
  logo String?
}

model mediaPartner {
  id   String  @id @default(cuid())
  name String  @default("")
  logo String?
}