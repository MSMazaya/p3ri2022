datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid()) @postgresql.Uuid
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Merch {
  id          String @id @default(uuid()) @postgresql.Uuid
  name        String @default("")
  productUrl  String @default("")
  description Json   @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  photo       Json?
}

model Faq {
  id       String @id @default(uuid()) @postgresql.Uuid
  question String @default("")
  answer   String @default("")
}

model Event {
  id               String                  @id @default(uuid()) @postgresql.Uuid
  thumbnail        Json?
  waktuAwalAcara   DateTime?
  waktuAkhirAcara  DateTime?
  tags             Tag[]                   @relation("Event_tags")
  jenisKegiatan    EventJenisKegiatanType?
  shortDescription String                  @default("")
  longDescription  Json                    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  is_highlighted   Boolean                 @default(false)
}

model Tag {
  id     String  @id @default(uuid()) @postgresql.Uuid
  name   String  @default("")
  events Event[] @relation("Event_tags")
}

enum EventJenisKegiatanType {
  offline
  online
}