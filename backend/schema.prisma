// Modify your Keystone config when you want to change this.

datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Merch {
  id          String  @id @default(cuid())
  name        String  @default("")
  productUrl  String  @default("")
  description String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  photo       String?
}

model Faq {
  id       String @id @default(cuid())
  question String @default("")
  answer   String @default("")
}

model Event {
  id               String    @id @default(cuid())
  thumbnail        String?
  waktuAwalAcara   DateTime?
  waktuAkhirAcara  DateTime?
  tags             Tag[]     @relation("Event_tags")
  jenisKegiatan    String?
  shortDescription String    @default("")
  longDescription  String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  is_highlighted   Boolean   @default(false)
}

model Tag {
  id     String  @id @default(cuid())
  name   String  @default("")
  events Event[] @relation("Event_tags")
}